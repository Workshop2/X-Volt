@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/jquery-style")
    @Scripts.Render("~/bundles/jquery")

    <style type="text/css">
        html, body {
            padding: 0;
            margin: 0;
        }

        .main {
            width: 900px;
            margin: 0 auto;
        }

        .menu-wrapper {
            color: white;
        }

        .menu-links-outer {
            /*background-color: #F58CC4;*/
            /*float:left; 
            width:100%; */
            margin-right: 130px;
            margin-top: 10px;
            height: 120px;
            position: relative;
        }

        .menu-live-tile {
            background-color: #158CC4;
            float:right;
            width:120px;
            height: 120px;
        }
        
        .menu-links-inner {
            background-color: #158CC4;
            position:absolute; 
            bottom:0;
            /*padding: 15px 0 15px 0;*/
            margin-right: -15px;
            width: 100%;
        }

        .menu-links-inner ul {
	        margin: 0;
	        padding: 10px;
	        text-align: left;
	        list-style: none;
        }

        .menu-links-inner ul li {
            display: inline;
            list-style-type: none;
            /*margin: 15px;*/
        }

        .menu-links-inner ul li a {
	        text-decoration: none;
            color: white;
        }
        
        .menu-links-inner ul li:hover {
	        background: #BBBBBB;
	        color: #FFFFFF;
        }
    </style>
</head>
<body>
    <div class="main">
        <div class="menu-wrapper">
            <div class="menu-live-tile">
                I am the live tile
            </div>
            <div class="menu-links-outer">
                <div class="menu-links-inner">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Media</a></li>
                        <li><a href="#">Downloads</a></li>
                        <li><a href="#">Gallery</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="content">
            @RenderBody()
        </div>
    </div>
</body>
</html>
