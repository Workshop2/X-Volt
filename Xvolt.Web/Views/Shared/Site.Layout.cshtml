@using System.Web.Optimization
<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/bundles/site-style")
    @Styles.Render("~/bundles/jquery-style")

    @Scripts.Render("~/bundles/jquery-script")
    @Scripts.Render("~/bundles/site-script")
</head>
<body class="gradient">
    <div class="site-wrapper">
        <div class="menu-wrapper center">
            <div class="menu-live-tile live-tile blue" data-mode="flip" data-delay="5000" data-speed="300" data-initdelay="2000">
                <div class="live-tile-front">
                    <span class="tile-title">X-Volt Studios</span>
                </div>
                <div class="live-tile-back">
                    <span class="tile-title">Simon Colmer</span>
                </div>
            </div>
            <div class="menu-mobile">
                <div class="menu-icon">
                    <img src="@Url.Content("~/Images/menu.png")" alt="Menu Dropdown" />
                </div>
            </div>
            <div class="menu-logo">
                <img src="@Url.Content("~/Images/logoText.png")" alt="X-Volt Logo" />
            </div>
            <div class="menu-links-outer">
                <div class="menu-links-inner">
                    <ul>
                        <li><a href="#">Home</a></li>
                        <li><a href="#">Media</a></li>
                        <li><a href="#">Downloads</a></li>
                        <li><a href="#">Gallery</a></li>
                        <li><a href="#">About</a></li>
                        <li><a href="#">Contact</a></li>
                    </ul>
                </div>
            </div>
        </div>
        <div class="menu-mobile-dropdown"></div>
        <div class="content-wrapper background-fill">
            <div class="content-inner">
                @RenderBody()
            </div>
        </div>
        <div class="push"></div>
    </div>
    <div class="footer-outer background-fill">
        <div class="footer-inner center">
            X-Volt Studios, Copyright 2013. &copy;
        </div>
    </div>
</body>
</html>
