@model Xvolt.Web.ViewModels.Home.IndexViewModel

@{
    ViewBag.Title = "Index";
}

<div class="center">
    <h2>Index</h2>

    <table>
        <tr>
            <th></th>
            <th></th>
            <th></th>
        </tr>

        @foreach (var item in Model.NewsItems)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>@item.Author.Username</td>
                <td>@item.Content.TrimmedArticle</td>
            </tr>
        }

    </table>
</div>
